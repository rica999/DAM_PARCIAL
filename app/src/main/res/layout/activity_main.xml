<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_untels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNTELS"
        android:textSize="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
        android:id="@+id/lbl_carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EP. INGENIERÃA DE SISTEMAS"
        android:layout_marginTop="36dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_untels"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
        android:id="@+id/lbl_confe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conferencia internacional en ciencias de datos"
        android:layout_marginTop="36dp"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/lbl_carrera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center_horizontal" />
<TextView
        android:id="@+id/lbl_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: 17/12/2020"
        android:textSize="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_confe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
        android:id="@+id/lbl_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora: 15:17pm"
        android:textSize="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_fecha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />


    <LinearLayout
        android:id="@+id/content_redes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lbl_hora"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >

        <ImageButton
            android:id="@+id/img_face"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_logotipo_circular_de_facebook"
            android:layout_marginLeft="24dp"
            />

        <ImageButton
            android:id="@+id/img_inst"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_logotipo_de_instagram"
            android:layout_marginLeft="24dp"
            />

        <ImageButton
            android:id="@+id/img_tw"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_gorjeo"
            android:layout_marginLeft="24dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/img_insc"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_description_black_18dp"
            android:layout_marginLeft="64dp"
            />

        <ImageButton
            android:id="@+id/img_taller"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity=""
            android:background="@drawable/ic_chrome_reader_mode_black_18dp"
            android:layout_marginLeft="64dp"
            />

        <ImageButton
            android:id="@+id/img_regl"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_class_black_18dp"
            android:layout_marginLeft="64dp"
        />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>